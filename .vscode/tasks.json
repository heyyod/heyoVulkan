{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}\\build.bat",
            "problemMatcher": "$msCompile",
            "presentation": {
                "revealProblems": "onProblem",
                "close": false,
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "debug",
            "type": "shell",
            "command": "${workspaceFolder}\\debug.bat",
            "problemMatcher": "$msCompile",
            "presentation": {
                "revealProblems": "never",
                "close": true,
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}